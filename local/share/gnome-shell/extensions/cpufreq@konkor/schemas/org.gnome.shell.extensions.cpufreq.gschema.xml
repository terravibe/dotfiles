<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions-cpufreq-daemon">

  <schema id="org.gnome.shell.extensions.cpufreq" path="/org/gnome/shell/extensions/cpufreq/">

    <key type="b" name="save-settings">
      <default>true</default>
      <summary>Save settings</summary>
      <description>Restore settings on startup</description>
    </key>

    <key type="b" name="extension-mode">
      <default>true</default>
      <summary>Extension Mode</summary>
      <description>Running main app without window decorations</description>
    </key>

    <key type="b" name="show-splash">
      <default>true</default>
      <summary>Show Splash</summary>
      <description>Enable Splash Screen on selecting</description>
    </key>

    <key type="b" name="dark-theme">
      <default>true</default>
      <summary>Dark theme</summary>
      <description>Use gtk dark theme</description>
    </key>

    <key type="s" name="profile-id">
      <default>"balanced"</default>
      <summary>Current profile</summary>
      <description>Power profile ID = balanced|battery|performance|default|GUID</description>
    </key>

    <key type="s" name="user-profile">
      <default>""</default>
      <summary>Saved settings</summary>
      <description>Profile for remembered settings</description>
    </key>

    <key type="b" name="units-show">
      <default>true</default>
      <summary>Show Units</summary>
      <description>Show frequency units</description>
    </key>

    <key type="b" name="frequency-show">
      <default>true</default>
      <summary>Monitor frequency</summary>
      <description>Show current frequency on the panel</description>
    </key>

    <key type="b" name="governors-show">
      <default>false</default>
      <summary>Monitor governor</summary>
      <description>Show current governor on the panel</description>
    </key>

    <key type="b" name="load-show">
      <default>false</default>
      <summary>Monitor load</summary>
      <description>Show current computer load</description>
    </key>

    <key type="s" name="label">
      <default>'\u269b'</default>
      <summary>Custom label</summary>
      <description>Label or just a symbol to show when monitor disabled</description>
    </key>

    <key type="b" name="label-show">
      <default>false</default>
      <summary>Show Label</summary>
      <description>Always show custom label</description>
    </key>

    <key type="s" name="color-show-custom-critical">
      <default>'#ff0000'</default>
      <summary>Overload load color</summary>
      <description>Monitor color when computer is under overloaded load</description>
    </key>

    <key type="s" name="color-show-custom-warning">
      <default>'#ebebeb'</default>
      <summary>Busy load color</summary>
      <description>Monitor color when computer is under busy load</description>
    </key>

    <key type="s" name="color-show-custom-normal">
      <default>'#ebebeb'</default>
      <summary>Normal load color</summary>
      <description>Monitor color when computer is under normal load</description>
    </key>

    <key type="b" name="color-show-custom">
      <default>false</default>
      <summary>Display Monitor in custom colors</summary>
      <description>Display Monitor in custom colors depending on computer load</description>
    </key>

    <key type="b" name="color-show">
      <default>true</default>
      <summary>Display Monitor in color</summary>
      <description>Display Monitor in color depending on computer load</description>
    </key>

    <key type="s" name="profiles">
        <default>''</default>
        <summary>Profiles</summary>
        <description>User profiles</description>
    </key>

    <key type="i" name="monitor">
      <default>1000</default>
      <summary>Frequency monitor interval</summary>
      <description>Frequency monitor interval</description>
    </key>

    <key type="s" name="event-profiles">
      <default>'[{"percent":0,"event":0,"guid":"user"},{"percent":100,"event":1,"guid":""}]'</default>
      <summary>Events Profiles</summary>
      <description>Power Events Profiles</description>
    </key>

    <key type="i" name="window-height">
      <default>720</default>
      <summary>Window Height</summary>
      <description>Window Height To Save</description>
    </key>

    <key type="i" name="window-width">
      <default>480</default>
      <summary>Window Width</summary>
      <description>Window Width To Save</description>
    </key>

    <key type="i" name="window-x">
      <default>-1</default>
      <summary>Window x</summary>
      <description>Window x coordinate</description>
    </key>

    <key type="i" name="window-y">
      <default>0</default>
      <summary>Window y</summary>
      <description>Window y coordinate</description>
    </key>

    <key type="b" name="window-maximized">
      <default>false</default>
      <summary>Window maximized</summary>
      <description>Window maximized</description>
    </key>

    <key type="u" name="power-state">
      <default>0</default>
      <summary>Debug Power State</summary>
      <description>Emulate Power State</description>
    </key>

    <key type="d" name="power-percentage">
      <default>0.0</default>
      <summary>Debug Power Percentage</summary>
      <description>Emulate Power Percentage</description>
    </key>

  </schema>
</schemalist>
